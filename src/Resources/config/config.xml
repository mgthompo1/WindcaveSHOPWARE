<?xml version="1.0" encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Windcave REST API</title>
        <input-field type="text">
            <name>restUsername</name>
            <label>REST API Username</label>
            <required>true</required>
        </input-field>
        <input-field type="password">
            <name>restApiKey</name>
            <label>REST API Key</label>
            <required>true</required>
        </input-field>
        <input-field type="bool">
            <name>testMode</name>
            <label>Test mode</label>
            <defaultValue>true</defaultValue>
        </input-field>
        <input-field type="single-select">
            <name>paymentMode</name>
            <label>Payment Mode</label>
            <helpText>Choose how customers enter payment details: Drop-In (full UI), Hosted Fields (inline card fields), or HPP (redirect)</helpText>
            <defaultValue>dropin</defaultValue>
            <options>
                <option>
                    <id>dropin</id>
                    <name>Drop-In (Embedded UI)</name>
                </option>
                <option>
                    <id>hostedfields</id>
                    <name>Hosted Fields (Inline Card Fields)</name>
                </option>
                <option>
                    <id>hpp</id>
                    <name>HPP (Redirect to Windcave)</name>
                </option>
            </options>
        </input-field>
    </card>

    <card>
        <title>Wallet Payments &amp; Card Storage</title>
        <input-field type="text">
            <name>appleMerchantId</name>
            <label>Apple Pay merchantId (Windcave)</label>
            <helpText>Your Apple Pay merchant ID registered with Windcave</helpText>
        </input-field>
        <input-field type="text">
            <name>googleMerchantId</name>
            <label>Google Pay merchantId (Windcave/Google)</label>
            <helpText>Your Google Pay merchant ID</helpText>
        </input-field>
        <input-field type="bool">
            <name>storeCard</name>
            <label>Store card token for rebilling</label>
            <defaultValue>false</defaultValue>
        </input-field>
        <input-field type="text">
            <name>storedCardIndicatorInitial</name>
            <label>Stored card indicator (initial)</label>
            <defaultValue>credentialonfileinitial</defaultValue>
        </input-field>
        <input-field type="text">
            <name>storedCardIndicatorRecurring</name>
            <label>Stored card indicator (recurring)</label>
            <defaultValue>credentialonfile</defaultValue>
        </input-field>
        <input-field type="bool">
            <name>requireZipCode</name>
            <label>Require ZIP/Postal Code</label>
            <helpText>Add a ZIP/postal code field after CVC in Hosted Fields and Drop-In modes</helpText>
            <defaultValue>false</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Drop-in Appearance</title>
        <input-field type="single-select">
            <name>darkModeConfig</name>
            <label>Theme Mode</label>
            <helpText>Controls the color theme of the drop-in payment form</helpText>
            <defaultValue>light</defaultValue>
            <options>
                <option>
                    <id>light</id>
                    <name>Light</name>
                </option>
                <option>
                    <id>dark</id>
                    <name>Dark</name>
                </option>
                <option>
                    <id>auto</id>
                    <name>Auto (match browser)</name>
                </option>
            </options>
        </input-field>
        <input-field type="bool">
            <name>hideSelectPaymentMethodTitle</name>
            <label>Hide 'Select Payment Method' title</label>
            <helpText>Hide the header text above payment options</helpText>
            <defaultValue>false</defaultValue>
        </input-field>
        <input-field type="text">
            <name>fontFamily</name>
            <label>Font Family</label>
            <helpText>e.g., Arial, Helvetica, sans-serif</helpText>
            <placeholder>inherit</placeholder>
        </input-field>
        <input-field type="colorpicker">
            <name>primaryTextColor</name>
            <label>Primary Text Color</label>
            <helpText>Main text color for labels and headings</helpText>
        </input-field>
        <input-field type="colorpicker">
            <name>secondaryTextColor</name>
            <label>Secondary Text Color</label>
            <helpText>Secondary text color for hints</helpText>
        </input-field>
    </card>

    <card>
        <title>Drop-in Styling (Optional)</title>
        <input-field type="colorpicker">
            <name>submitButtonBgColor</name>
            <label>Button Background</label>
        </input-field>
        <input-field type="colorpicker">
            <name>submitButtonTextColor</name>
            <label>Button Text</label>
        </input-field>
        <input-field type="text">
            <name>submitButtonBorderRadius</name>
            <label>Button Border Radius</label>
            <placeholder>4px</placeholder>
        </input-field>
        <input-field type="colorpicker">
            <name>containerBgColor</name>
            <label>Container Background</label>
        </input-field>
        <input-field type="colorpicker">
            <name>containerBorderColor</name>
            <label>Container Border</label>
        </input-field>
        <input-field type="text">
            <name>containerBorderRadius</name>
            <label>Container Border Radius</label>
            <placeholder>8px</placeholder>
        </input-field>
        <input-field type="colorpicker">
            <name>inputBgColor</name>
            <label>Input Background</label>
        </input-field>
        <input-field type="colorpicker">
            <name>inputBorderColor</name>
            <label>Input Border</label>
        </input-field>
        <input-field type="colorpicker">
            <name>inputFocusBorderColor</name>
            <label>Input Focus Border</label>
        </input-field>
        <input-field type="text">
            <name>inputBorderRadius</name>
            <label>Input Border Radius</label>
            <placeholder>4px</placeholder>
        </input-field>
    </card>

    <card>
        <title>Advanced</title>
        <input-field type="textarea">
            <name>customCss</name>
            <label>Custom CSS</label>
            <helpText>Add custom CSS rules to style the drop-in. Use Windcave class names like .windcave-dropin-container</helpText>
        </input-field>
    </card>
</config>
